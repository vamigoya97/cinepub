model Location {
  id        Int         @id @default(autoincrement())
  name      String
  capacity  Int
  address   String
  movies    Screening[]
  createdAt DateTime    @default(now())
}

model Movie {
  id         Int         @id @default(autoincrement())
  title      String
  director   String
  poster_url String
  locations  Screening[]
  createdAt  DateTime    @default(now())
}

model Screening {
  id         Int      @id @default(autoincrement())
  locationId Int
  locations  Location @relation(fields: [locationId], references: [id])
  movieId    Int
  movies     Movie    @relation(fields: [movieId], references: [id])

  @@unique([movieId, locationId])
}
